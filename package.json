{
    "name": "bakalari-extension",
    "version": "1.1.2",
    "description": "Average by subject, average overall, predictor, wide mode, big marks, stipendium...",
    "scripts": {
        "watch": "webpack --config webpack/webpack.js --env=mode=development --env=browser=chrome --watch",
        "watch-firefox": "webpack --config webpack/webpack.js --env=mode=development --env=browser=firefox --watch",
        
        "build": "webpack --config webpack/webpack.js --env=mode=production --env=browser=chrome",
        "build-dev": "webpack --config webpack/webpack.js --env=mode=development --env=browser=chrome",
        
        "build-firefox": "webpack --config webpack/webpack.js --env=mode=production --env=browser=firefox",
        "build-firefox-dev": "webpack --config webpack/webpack.js --env=mode=development --env=browser=firefox",
        
        "build-all": "webpack --config webpack/webpack.js --env=mode=production --env=browser=chrome --env=all && cp -r dist/_locales dist/js dist/content.css dist-firefox && python userscript-build.py",
        "build-all-dev": "webpack --config webpack/webpack.js --env=mode=development --env=browser=chrome --env=all && cp -r dist/_locales dist/js dist/content.css dist-firefox && python userscript-build.py",
        
        "style": "prettier --write \"src/**/*.{ts,tsx}\"",
        "style-json": "prettier --write \"{.prettierrc, package.json, package-lock.json, tsconfig.json}\"",
        "style-webpack": "prettier --write \"webpack/*.js\"",
        
        "lint": "eslint . --ext .ts",
        "lint-fix": "eslint --fix . --ext .ts",
        "clean": "rm -rf dist dist-firefox dist-userscript"
    },
    "author": "AdamJedl",
    "license": "GPL-3.0",
    "devDependencies": {
        "@types/chrome": "^0.0.237",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-minimizer-webpack-plugin": "^5.0.0",
        "esbuild-loader": "^3.0.1",
        "eslint": "^8.25.0",
        "eslint-config-hardcore": "^36.3.2",
        "json-minimizer-webpack-plugin": "^4.0.0",
        "mini-css-extract-plugin": "^2.7.6",
        "prettier": "^2.7.1",
        "typescript": "^5.1.3",
        "webpack": "^5.74.0",
        "webpack-cli": "^5.1.4"
    }
}
